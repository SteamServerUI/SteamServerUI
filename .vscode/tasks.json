{
    "version": "2.0.0",
    "tasks": [
        // NPM Tasks
        {
            "type": "shell",
            "label": "npm: install",
            "command": "npm",
            "args": ["install"],
            "options": {
                "cwd": "${workspaceFolder}/ssui-interfacev2"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Install SvelteKit dependencies"
        },
        {
            "type": "shell",
            "label": "npm: build",
            "command": "npm",
            "args": ["run", "build"],
            "options": {
                "cwd": "${workspaceFolder}/ssui-interfacev2"
            },
            "problemMatcher": [],
            "group": "build",
            "detail": "Build SvelteKit production bundle"
        },
        {
            "type": "shell",
            "label": "npm: dev",
            "command": "npm",
            "args": ["run", "dev"],
            "options": {
                "cwd": "${workspaceFolder}/ssui-interfacev2"
            },
            "problemMatcher": [],
            "group": "test",
            "isBackground": true,
            "presentation": {
                "reveal": "always",
                "panel": "dedicated"
            },
            "detail": "Start SvelteKit dev server"
        },

        // Go Tasks
        {
            "type": "shell",
            "label": "go: run build script",
            "command": "go",
            "args": ["run", "./build/build.go"],
            "problemMatcher": ["$go"],
            "group": "build",
            "detail": "Build Go binary",
            "dependsOn": ["npm: build"],
            "dependsOrder": "sequence"
        },
        {
            "type": "shell",
            "label": "go: test all",
            "command": "go",
            "args": ["test", "./...", "-v"],
            "problemMatcher": ["$go"],
            "group": "test",
            "detail": "Run all Go tests"
        },
        {
            "type": "shell",
            "label": "go: test with race detector",
            "command": "go",
            "args": ["test", "./...", "-race", "-v"],
            "problemMatcher": ["$go"],
            "group": "test",
            "detail": "Run Go tests with race detector"
        },

        // Combined Tasks
        {
            "label": "build: full project",
            "dependsOn": ["npm: install", "npm: build", "go: run build script"],
            "group": "build",
            "detail": "Complete build pipeline (Svelte â†’ Go)",
            "problemMatcher": []
        }
    ]
}