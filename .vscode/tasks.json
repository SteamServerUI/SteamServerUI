{
    "version": "2.0.0",
    "tasks": [
        {
            "type": "shell",
            "label": "go: run build script",
            "command": "go",
            "args": [
                "run",
                "./build/build.go"
            ],
            "problemMatcher": [
                "$go"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Runs the Go build script located at ./build/build.go",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "go: test all",
            "command": "go",
            "args": [
                "test",
                "./...",
                "-v"
            ],
            "problemMatcher": [
                "$go"
            ],
            "group": "test",
            "detail": "Runs all Go tests in the project with verbose output",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        },
        {
            "type": "shell",
            "label": "go: test with race detector",
            "command": "go",
            "args": [
                "test",
                "./...",
                "-race",
                "-v"
            ],
            "problemMatcher": [
                "$go"
            ],
            "group": "test",
            "detail": "Runs all Go tests with the race detector to check for data race conditions",
            "options": {
                "cwd": "${workspaceFolder}"
            }
        }
    ]
}